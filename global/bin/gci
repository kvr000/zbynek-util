#!/bin/sh

globalOpt=
if [ "x$1" = "x-C" ]; then
	globalOpt="$globalOpt $1 $2"; shift; shift
fi

date="$1"; shift
gdate="$date"
#gdate=`faketime -f "$date" date`
#if [ $OSTYPE = "Linux" ]; then
#	date=`date -d "$1"`
#fi
msg="$1"; shift
export GIT_AUTHOR_DATE="$gdate"
export GIT_COMMITTER_DATE="$gdate"
git $globalOpt commit --date "$gdate"
